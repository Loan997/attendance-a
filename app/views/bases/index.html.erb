<% provide(:title, '拠点一覧') %>
<h1>拠点一覧</h1>



<div class="table-responsive">
  <table class="table table-bordered table-striped">
    <thead>
	      <tr>
          <th></th>
          <th></th>
          <th class="text-center">拠点番号</th>
          <th class="text-center">拠点名</th>
          <th class="text-center">勤怠種類</th>
	       </tr>
    </thead>
    <tbody>
      <% @bases.each do |base| %>
      <tr>
        <td class="text-center">
          <%= link_to "編集", edit_basis_path(base), class: "btn btn-primary", remote: true %>
        </td>
        <td class="text-center"><%= link_to "削除", base, method: :delete, data: { confirm: "本当に削除しますか。" }, class: "btn btn-primary" %></td>
        <td class="text-right"><%= base.base_number %></td>
        <td class="text-left"><%= base.base_name %></td>
        <td class="text-left"><%= base.attendance_type %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "拠点情報の追加", new_basis_path, class: "btn btn-primary", remote: true %>
</table>
<div id="user-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
	 


