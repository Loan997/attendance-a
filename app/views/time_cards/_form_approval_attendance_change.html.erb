<div class="modal-dialog">
  <div class="modal-content">
    <% user_id_temp = '' %>
    <%= form_tag("/time_cards/approval_attendance_change/update", method: "patch"  ) do %>
      <% @time_cards.each do |time_card| %>
        <% if time_card.user_id != user_id_temp %>
          <h3>【<%= time_card.user.name %>からの勤怠変更申請】</h3>
        <% end %>
          <div class="table-responsive table-striped">
            <%= fields_for "time_cards[]", time_card do |f| %>
              <table class="table table-striped table-condensed table-bordered">
                <thead>
                  <tr>
                    <th rowspan="3">日付</th>
                    <th rowspan="3">曜日</th>
                    <th colspan="4">変更前</th>
                    <th colspan="4">変更後</th>
                    <th rowspan="3">備考</th>
                    <th rowspan="3">指示者確認㊞</th>
                    <th rowspan="3">変更</th>
                    <th rowspan="3">勤怠を確認する</th>
                  </tr>
                  <tr>
                    <th colspan="2">出社</th>
                    <th colspan="2">退社</th>
                    <th colspan="2">出社</th>
                    <th colspan="2">退社</th>
                  </tr>
                  <tr>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                    <th>時</th>
                    <th>分</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    
                    <td><%= time_card.date.strftime("%m/%d") %></td>
                    <td><%= get_weekday(time_card.date.strftime("%y"), time_card.date.strftime("%m"), time_card.date.strftime("%d")) %></td>
                    <td><%= time_card.previous_in_at ? time_card.previous_in_at.strftime('%H') : '' %></td>
                    <td><%= time_card.previous_in_at ? time_card.previous_in_at.strftime('%M') : '' %></td>
                    <td><%= time_card.previous_out_at ? time_card.previous_out_at.strftime('%H') : '' %></td>
                    <td><%= time_card.previous_out_at ? time_card.previous_out_at.strftime('%M') : '' %></td>
                    <td><%= time_card.in_at ? time_card.in_at.strftime('%H') : '' %></td>
                    <td><%= time_card.in_at ? time_card.in_at.strftime('%M') : '' %></td>
                    <td><%= time_card.out_at ? time_card.out_at.strftime('%H') : '' %></td>
                    <td><%= time_card.out_at ? time_card.out_at.strftime('%M') : '' %></td>
                    <td><%= time_card.remarks %></td>
                    <td><%= f.select :is_applying_attendance_change, ApplyingState.all.collect{ |p| [ p.status, p.id ] }, {}, required: true %></td>
                    <td><%= check_box_tag "[time_cards][#{time_card.id}][change]" %></td>
                    <td><%= link_to "確認", time_card_confirm_path(user_id: time_card.user_id, date: time_card.date, month_flag: 0, confirm: "change"), class: "btn btn-primary" %></td>
                  </tr>
                </tbody>
              </table>
            <% end %>
          </div>
      
        <% user_id_temp = time_card.user_id %>
      <% end %>
      <%= submit_tag('変更を送信する', class: "btn btn-primary col-xs-4 col-xs-offset-2") %>
    <% end %>
  </div>
</div>