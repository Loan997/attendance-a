<%= fields_for "time_card[]", time_card do |f| %>
<td><%= f.time_field(day, "in_at", value: get_in_at(day)) %></td>
<td><%= f.time_field(day, "out_at", value: get_out_at(day)) %></td>
<td><%= f.get_stay_time(params[:user_id], params[:year], params[:month], day) %></td>
<td><%= f.text_field(day, "remarks", value: get_remarks(day)) %></td>
<% end %>